<odoo>
    <data noupdate="1">
        <record id="product_video_1" model="product.video">
            <field name="name">Magento Odoo Bridge</field>
            <field name="product_tmpl_id" ref="product.product_product_9_product_template"/>
            <field name="video_description">Magento Odoo Bridge allows the user to effectively and efficiently connect Magento E-Commerce with Odoo thus harnessing the powerful E-Commerce of Magento along with comprehensive features of Odoo. In this video, we are going to show you, how you can install and configure our Magento Odoo Connector in your Magento and Odoo. We will also give you an overview of all the settings at both end and their usage.</field>
            <field name="video_url">https://youtu.be/bWIJCYTADAw</field>
            <field name="video_id">bWIJCYTADAw</field>
            <field name="image" type="base64" file="website_product_videos/static/img/mob.png"/>
        </record>
        <record id="product_video_2" model="product.video">
            <field name="name">Odoo Marketplace Installation and Configuration</field>
            <field name="product_tmpl_id" ref="product.product_product_9_product_template"/>
            <field name="video_description">This video will help you install Odoo Multi-vendor marketplace module and will also help you with the steps involved in the module configuration.</field>
            <field name="video_url">https://youtu.be/ZCkOWWcM9So</field>
            <field name="video_id">ZCkOWWcM9So</field>
            <field name="image" type="base64" file="website_product_videos/static/img/omp.png"/>
        </record>
        <record id="product_video_3" model="product.video">
            <field name="name">Webkul Cultural Day July 2015</field>
            <field name="product_tmpl_id" ref="product.product_product_9_product_template"/>
            <field name="video_description">Webkul Cultural Day July 2015.</field>
            <field name="video_url">https://vimeo.com/134644518</field>
            <field name="video_id">134644518</field>
            <field name="image" type="base64" file="website_product_videos/static/img/vimeo.png"/>
        </record>
        <record id="video_product" model="product.template">
            <field name="name">Test Video Product</field>
            <field name="standard_price">500.0</field>
            <field name="list_price">750.0</field>
            <field name="type">consu</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="website_published" eval="True"/>
            <field name="product_video_ids" eval="[(6,0, [ref('website_product_videos.product_video_1'), ref('website_product_videos.product_video_2'), ref('website_product_videos.product_video_3')])]"/>
            <field name="image_1024" type="base64" file="website_product_videos/static/img/webkul.jpg"/>
        </record>
    </data>
</odoo>
