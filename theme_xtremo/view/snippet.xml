    <template id="xtremo_sell_with_us" name="Sell Tag">
      <section id="xtremo_sell_with_us" class="s_cover parallax bg-black-50 oe_img_bg oe_custom_bg" data-scroll-background-ratio="1">
        <span class="s_parallax_bg" style="background-image: url('/theme_xtremo/static/src/img/snippet/Sell-with-us-img.png'); background-position: 50% 0;"/>
        <div class="container">
            <div class="row s_nb_column_fixed">
                <div class="col-lg-12" data-name="Title">
                  <h1 class="s_title_thin" style="text-align: center !important;">Sell With Us</h1>
                </div>
                <div class="col-lg-12 s_text" data-name="Text">
                  <p class="lead" style="text-align: center;">Write one or two paragraphs describing your product, services or a specific feature.<br/> To be successful your content needs to be useful to your readers.</p>
                </div>
                <div class="col-lg-12 s_btn text-center" data-name="Buttons">
                  <a href="/shop" class="open-shop">Open Shop</a>
                </div>
            </div>
        </div>
      </section>
    </template>

    <template id="xtremo_featured_product" name="Featured Product">
      <section class="xtremo_home_feature container" data-ref="feature">
      </section>
    </template>

    <template id="xtremo_featured_top_sale" name="Top Sale">
      <section class="xtremo_home_feature container" data-ref="top_sale">
      </section>
    </template>

    <template id="xtremo_featured_category" name="Top Category">
      <section class="xtremo_home_feature container" data-ref="category">
      </section>
    </template>

    <template id="xtremo_featured_rated" name="Top Rated">
      <section class="xtremo_home_feature container" data-ref="top_rated">
      </section>
    </template>

    <template id="xtremo_top_page_instruction" name="Web Page Name">
      <section id="xtremo_web_page_name">
        <img src="/theme_xtremo/static/src/img/snippet/page_name.png" alt="image" />
        <div class="name-page">
          <h2 class="s_title_thin" style="text-align: center !important;">Shop Page</h2>
        </div>
      </section>
    </template>

    <template id="xtremo_banner_with_category" name="Category With Banner">
      <section class="xtremo_banner_with_category container">
        <div id="xtremo_home_cat" >
          <ul class="remove-ul">
          </ul>
          <div id="myCarousel" class="s_carousel s_carousel_default carousel slide" data-interval="10000">
            <div class="carousel-inner">
              <div class="carousel-item active oe_custom_bg oe_img_bg pt152 pb152" style="background-image: url('/theme_xtremo/static/src/img/snippet/pexels-photo-296881.jpeg');" data-name="Slide">
              </div>
              <div class="carousel-item oe_custom_bg oe_img_bg pt128 pb128" style="background-image: url('/theme_xtremo/static/src/img/snippet/pexels-photo-936112.jpeg');" data-name="Slide">
              </div>
            </div>
            <div class="carousel-control-prev" data-target="#myCarousel" data-slide="prev" role="img" aria-label="Previous" title="Previous">
                <span class="carousel-control-prev-icon"/>
                <span class="sr-only">Previous</span>
            </div>
            <div class="carousel-control-next" data-target="#myCarousel" data-slide="next" role="img" aria-label="Next" title="Next">
                <span class="carousel-control-next-icon"/>
                <span class="sr-only">Next</span>
            </div>
          </div>
        </div>
      </section>
    </template>

