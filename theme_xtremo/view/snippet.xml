    <template id="shopoint_snippets" inherit_id="website.snippets" name="Shopoint">
        <xpath expr="//div[@id='snippet_mega_menu']/div[hasclass('o_panel_body')]" position="inside">
          <t t-snippet="theme_xtremo.xtremo_mega_menu_image_text" t-thumbnail="/theme_xtremo/static/src/icon/mega-menu-1.png"/>
          <t t-snippet="theme_xtremo.xtremo_mega_menu_image_menu" t-thumbnail="/theme_xtremo/static/src/icon/mega-menu.png"/>
          <t t-snippet="theme_xtremo.xtremo_mega_side_image_menu" t-thumbnail="/theme_xtremo/static/src/icon/mega-menu-3.png"/>
          <t t-snippet="theme_xtremo.xtremo_mega_simple_dropdown_menu" t-thumbnail="/theme_xtremo/static/src/icon/mega-menu-2.png"/>
        </xpath>
        <xpath expr="//div[@id='snippet_structure']" position="before">
            <div id="sp_snippet_structure" class="o_panel">
                <div class="o_panel_header">
                     <span><img id="snippet_icon" src="/theme_xtremo/static/src/icon/Logo.png" alt="Image" /></span>
                </div>
                <div class="o_panel_body">
                  <t t-snippet="theme_xtremo.xtremo_featured_product" t-thumbnail="/theme_xtremo/static/description/feature-product-snippet.png"/>
                  <t t-snippet="theme_xtremo.xtremo_featured_top_sale" t-thumbnail="/theme_xtremo/static/description/sales-product-snippet.png"/>
                  <t t-snippet="theme_xtremo.xtremo_featured_category" t-thumbnail="/theme_xtremo/static/description/top-categories-snippet.png"/>
                  <t t-snippet="theme_xtremo.xtremo_featured_rated" t-thumbnail="/theme_xtremo/static/description/top-rated-product-snippet.png"/>
                  <t t-snippet="theme_xtremo.xtremo_top_page_instruction" t-thumbnail="/theme_xtremo/static/description/page-banner-link-snippet.png"/>
                  <t t-snippet="theme_xtremo.xtremo_sell_with_us" t-thumbnail="/theme_xtremo/static/description/snippet_1.png"/>
                  <t t-snippet="theme_xtremo.xtremo_banner_with_category" t-thumbnail="/theme_xtremo/static/description/category-and-side-img.png"/>
                  <t t-snippet="theme_xtremo.xtremo_website_beauty" t-thumbnail="/theme_xtremo/static/description/horizontal-scroll.png"/>
                  <t t-snippet="theme_xtremo.xtremo_product_image_grid" t-thumbnail="/theme_xtremo/static/description/images-in-grid.png"/>
                  <t t-snippet="theme_xtremo.xtremo_bubble_description" t-thumbnail="/theme_xtremo/static/description/Related-product-image.png"/>
                  <t t-snippet="theme_xtremo.xtremo_contact_us_form" t-thumbnail="/theme_xtremo/static/description/Contact-form.png" />
                  <t t-snippet="theme_xtremo.about_us_header" t-thumbnail="/theme_xtremo/static/description/about-content.png" />
                  <t t-snippet="theme_xtremo.xtremo_s_text_image" t-thumbnail="/theme_xtremo/static/description/Side-img-and-content.png" />
                  <t t-snippet="theme_xtremo.xtremo_our_team" t-thumbnail="/theme_xtremo/static/description/our-team.png" />
