    <template id="snippet_options" inherit_id="website.snippet_options">
      <xpath expr="//div[1]" position="after">
        <div data-js='xtremo_home_feature' data-selector=".xtremo_home_feature"></div>
        <div data-js='xtremo_web_page_name' data-selector="#xtremo_web_page_name"></div>
        <div data-js='addXtremoBeauty' data-selector=".x-items">
          <we-button data-add-beauty="true" data-no-preview="true"><i class="fa fa-pencil-square-o"/> Add More Slide</we-button>
        </div>
        <div data-js='xtremo_team' data-selector=".xtremo_our_team .item">
          <we-button data-add-more="true" data-no-preview="true"><i class="fa fa-pencil-square-o"/> Add More Contact</we-button>
        </div>
        <div data-js='contact_us' data-selector=".xtremo_contact_us_form"></div>
        <div data-selector=".semi-item"></div>
      </xpath>
    </template>

  </data>
</odoo>
